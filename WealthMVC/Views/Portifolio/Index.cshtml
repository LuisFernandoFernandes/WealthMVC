@model IEnumerable<WealthMVC.Models.Portifolio>

@{
    ViewData["Title"] = "Index";
}

<h1>Portifólio</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ativos.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativos.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operacoes.QuantidadeAtual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operacoes.PrecoAtual)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ativos.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativos.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operacoes.QuantidadeAtual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operacoes.PrecoAtual)
            </td>
        </tr>
}
    </tbody>
</table>
